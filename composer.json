{
    "name": "amazium/amz-cqrs",
    "description": "Amazium : CQRS classes",
    "type": "library",
    "license": "mit",
    "authors": [
        {
            "name": "Jeroen Keppens",
            "email": "jeroen@amazium.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Amz\\Cqrs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AmzTest\\Cqrs\\": "test/"
        }
    },
    "require": {
        "php": "7.3",
        "amazium/amz-core": "dev-develop",
        "psr/log": "^1.1",
        "ramsey/uuid": "^3.8"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.2",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/php-invoker": "^2.0",
        "phpunit/phpunit": "^8.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "analyze": "phpstan analyze -l max -c ./phpstan.installer.neon ./src",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml --coverage-html docs/coverage"
    }
}
